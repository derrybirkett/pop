template(name="usercard")
  .usercard(style="background-image:url('#{services.twitter.profile_image_url}');")
    .basic
      img(src="#{services.twitter.profile_image_url}" class="avatar")  
      h1 
        a(href="{{pathFor 'profile'}}")
          | #{profile.name}
      h5 @#{services.twitter.screenName}

      if currentUser
        +loginButtons          
      else 
        button.btn 
          a(href="http://twitter.com/#{services.twitter.screenName}") Follow
