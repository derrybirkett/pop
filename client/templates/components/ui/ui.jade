      form
        section.divider.hidden
          h4 Your Account
          p This is all dummy content. Sorry.
          .form-group
            label Username
            input.form-control(type="text",placeholder="Username")
          .form-group
            label Email
            input.form-control(type="text",placeholder="Email")              
          button.btn.btn-default Submit
              
        section.divider.hidden
          h4 Evernote
          p Take it from me, you are great
          .form-group
            button.btn.btn-success 
              a(href="#")
                span.glyphicon.glyphicon-ok 
                | Evernote
            button.btn.btn-link
              a(href="#")
                span.glyphicon.glyphicon-off 
                  
        section.divider.hidden
          h4 Dribbble
          p Take it from me, you are great
          .form-group
            button.btn.btn-info 
              a(href="#")
                span.glyphicon.glyphicon-flash
                | Connect Dribbble

      
