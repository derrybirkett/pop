/*

    Meteor LOGIN

*/

.login-display-name
    display none !important

#login-buttons
  top 4px
  margin 1em 0em

  .login-button
    background-color transparent
    border 2px solid white
    padding 1em
    border-radius 50px
    font-weight 600
    &:hover
      background-color white
      color black
  .login-image
    left 7px
    top 11px
