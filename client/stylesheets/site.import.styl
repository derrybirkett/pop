/*

  Sitewide

*/

html, body
  height 100%

body
  padding 0em
  margin 0em

*
  font-weight 300
  transition:all 0.3s ease

a
  text-decoration none
  &:hover
    text-decoration none  !important

ul
  list-style none

.wrapper, .yield
  height 100%
  width 100%
  position relative

.mast
  padding 90px 0px 30px 0px;
  h1
    text-transform uppercase
    font-size 24px
    letter-spacing 10px

.utility
  position absolute
  right 15px
  top 5px
  z-index 1000
