/* TYPOGRAPHY */
@import url(http://fonts.googleapis.com/css?family=Lato:100,300,400,700,900)

/* VARS */
dark = #333

/* STYLE MIXINS */
outline()
    border 2px solid white
    background transparent

inverse()
    background white
    color dark

/* STYLES */
body
    background-color #222

*
    font-family "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif
    font-weight 300

h1
    margin 0em

h5
    text-transform uppercase
    font-size 12px
    margin 0.5em
    opacity 0.2
    font-weight 700

/* BUTTONS */
btn()
    outline()
    border-radius 50px
    padding 0.5em 1em
    font-size 14px
    color white
    margin 0.5em 0em
    &:hover
        inverse()

/* PROFILE */
.profile
    .avatar
        border-radius 50px
        margin 0.5em
    &.basic
        background #3b3f43;
        color white;
        text-align center;
        height 200px
        padding 200px 0px
        vertical-align middle
    button
        btn()


/* LOGIN */
.login-display-name
    display none !important

#login-buttons .login-button
    btn()
